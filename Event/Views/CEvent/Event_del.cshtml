@using Event.Models
@{
    ViewBag.Title = "Event_del";
    Layout = "~/Views/Shared/_layout.cshtml";
}
<h2>Delete Event</h2>
<div class="row">
    <div class="col-md-12">
        <div class="block">
            <div class="block-heading">
                <div class="block-content-outer">
                    <div class="block-content-inner">
                        <form action="/CEvent/Event_del/" method="post">
                            <input type="hidden" name="Event_ID" value="@Model.Event_ID" />
                            <label>@Model.Event_Name Do you want to remove it?</label>
                            <input type="submit" class="btn btn-danger" name="Event_Name" value="Evet">
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



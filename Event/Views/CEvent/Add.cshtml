@using  Event.Models
@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_layout.cshtml";
}

<h2>Adding Events</h2>
<div class="row">
    <div class="col-md-12">
        <div class="block">
            <div class="block-heading"> </div>
            <div class="block-content-outer">
                <div class="block-content-inner">
                    <form action="/CEvent/Add" method="post" role="form">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Event Name</label>
                            <input type="text" class="form-control" placeholder="Enter Event Name" name="Event_Name">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Venue</label>
                            <select class="form-control" name="Venue_ID">
                                @foreach (Venue item in ViewBag.Venues)
                                {
                                    <option value="@item.Venue_ID">@item.Venue_Name</option>
                                }
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Category</label>
                            <select class="form-control" name="Cat_ID">
                                @foreach (Category item in ViewBag.Categorys)
                                {
                                    <option value="@item.Cat_ID">@item.Cat_Name</option>
                                }
                            </select>
                        </div>
                        <button type="submit" class="btn btn-primary">Add Event</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

